<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"><%= link_to "Sing In", login_path %></label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"><%= link_to "Sing Up", signup_path %></label>
		<div class="login-form">
			<div class="sign-in-htm">
				<%= form_for(:session, url: login_path) do |f| %>
					<div class="group">
					<%= f.label :email %>
					<%= f.email_field :email, class: 'input' %>
					</div>
					<div class="group">
					<%= f.label :password %>
					<%= f.password_field :password, class: 'input' %>
					</div>
					<div class="group">
					<input id="check" type="checkbox" class="check" checked>
					<label for="check"><span class="icon"></span> Keep me Signed in</label>
				   </div>
					<div class="group">
					<%= f.submit "Log in", class: "button" %>
					</div>
					<div class="hr"></div>
					<div class="foot-lnk">
						<a href="#forgot">Forgot Password?</a>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>