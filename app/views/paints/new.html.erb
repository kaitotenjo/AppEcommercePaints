<div class="container-xl">
<div class="row">
    <div class="col-lg-12">
          <div class="form">
            <form class="form-validate form-horizontal " id="register_form" method="get" action="">
              <div class="form-group ">
              <%= form_for(@paint) do |f| %>
                <label for="name" class="control-label col-lg-2">Full name <span class="required">*</span></label>
                <div class="col-lg-10">
                  <input class=" form-control" id="name" name="name" type="text" style="width: 500px;"/>
                </div>
              </div>
              <div class="form-group ">
                <label for="price" class="control-label col-lg-2">price <span class="required">*</span></label>
                <div class="col-lg-10">
                  <input class=" form-control" id="price" name="price" type="text" style="width: 500px;" />
                </div>
              </div>
              <div class="form-group ">
                <label for="description" class="control-label col-lg-2">Description<span class="required">*</span></label>
                <div class="col-lg-10">
                  <input class=" form-control" id="description" name="description" type="text" style="width: 500px; height:100px; " maxlength="300"  />
                </div>
              </div>
               <div class="form-group">
                  <label class="control-label col-lg-2" >Type paint</label>
                   <div class="radios">
                        <label class="label_radio" for="radio-01">
                            <input name="type_paint" id="radio-01" value="foreign paint" type="radio" checked />foreign paint
                        </label>
                        <label class="label_radio" for="radio-02">
                            <input name="type_paint" id="radio-02" value="internal paint" type="radio" /> internal paint
                        </label>
                      </div>
                </div>
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <button class="btn btn-primary" type="submit">Save</button>
                  <button class="btn btn-default" type="button">Cancel</button>
                </div>
              </div>
              <% end %>
            </form>
          </div>
    </div> 
  </div>
</div>