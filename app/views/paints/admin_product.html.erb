<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Customer <b>product</b></h2></div>
                    <div class="col-sm-4">
                        <a href="/create_product" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New Product</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name of Paint <i class="fa fa-sort"></i></th>
                        <th>price </th>
                        <th>Type paint<i class="fa fa-sort"></i></th>
                        <th>Created At</th>
                        <th>Update At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                   <%=render partial: "product",  collection: @paints, as: "paints"%> 
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b><%= Paint.count %></b> entries</div>
                 <div class="pagination" style="float: right; margin-right: 150px"><%== pagy_bootstrap_nav(@pagy)%></div>
            </div>
        </div>
    </div>  
</div>
